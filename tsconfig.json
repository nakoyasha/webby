{
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
      "ts-node/register/transpile-only"
    ]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@system/*": [
        "src/system/*"
      ],
      "@util/*": [
        "src/util/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "legacy_src"
  ]
}