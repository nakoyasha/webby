{
  "files": [],
  "references": [
    {"path": "src/shared/Tracker"},
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register",
      "ts-node/register/transpile-only"
    ]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@client/*": [
        "src/client/src/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@plugins/*": [
        "src/server/plugins/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
    }, /* Allow multiple folders to be treated as one when resolving modules. */
  },
  "include": [
    "./**/*.ts"
 ],
  "exclude": [
    "node_modules",
    "dist",
    // "scripts",
  ],
}